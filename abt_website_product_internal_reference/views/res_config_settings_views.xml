<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherited_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='website_shop_checkout']" position="after">
                <h2>Display Only Website Product Internal Reference</h2>
                <div class="row mt16 o_settings_container" id="website_product_internal_reference">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_shown_product_int_ref"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_shown_product_int_ref"/>
                            <div class="text-muted">
                                Show Product Internal Reference In Website.
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" invisible="is_shown_product_int_ref != True">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div>
                                    <label class="o_light_label col-lg-3" for="internal_reference_font_color"/>
                                    <field name="internal_reference_font_color" widget="color"/>
                                </div>
                                <div>
                                    <label class="o_light_label col-lg-3" for="internal_reference_font_size"/>
                                    <field name="internal_reference_font_size" style="width:22%;"/> px
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" invisible="is_shown_product_int_ref != True">
                        <div class="o_setting_left_pane">
                            <field name="is_internal_reference_font_bold" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_internal_reference_font_bold"/>
                            <div class="text-muted">
                                Change Internal Reference Font Style In Website.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
