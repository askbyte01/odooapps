<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherited_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='hide_add_to_cart_setting']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="show_product_int_ref"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_product_int_ref"/>
                        <div class="text-muted">
                            Show Product Internal Reference In Website.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
