<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-inherit="point_of_sale.ProductItem" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('product-content')]/span" position="after">
            <span class="price-tag" style="color: black;">
                <t t-if="props.product.default_code">
                    [<t t-esc="props.product.default_code" />]
                </t>    
            </span>
        </xpath>
    </t>
</templates>
